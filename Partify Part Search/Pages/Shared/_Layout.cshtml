<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Partify_Part_Search</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Partify_Part_Search.styles.css" asp-append-version="true" />
    <style>
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #0c1a94;
            color: white;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 100;
        }

            .header .left {
                font-size: 24px;
                font-weight: bold;
            }

            .header .right {
                font-size: 18px;
            }
        body {
            margin: 0;
            padding-top: 60px;
            font-family: Arial, sans-serif;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="left">Partify Code Test</div>
        <div class="right">Created by Joshua Summers</div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>